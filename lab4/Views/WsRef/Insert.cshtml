<div class="d-flex gap-2 p-3">
    <a href="/WsRef/Insert" class="btn btn-info">Insert</a>
</div>

<form method="post" action="/WsRef/Insert" class="form-control p-2 border rounded-2 border-1 d-flex flex-column gap-2">
    <input name="url" class="form-control" placeholder="Url..." />
    <input name="description" class="form-control" placeholder="Description..." />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Ok</button>
        <a href="/WsRef" class="btn btn-info">Cancel</a>
    </div>

    @await Html.PartialAsync("ErrorsBlock")
</form>