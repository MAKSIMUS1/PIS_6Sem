@model int

<div class="d-flex gap-2 p-3">
    <a href="/WsRef/Insert" class="btn btn-info">Insert comment to @Model</a>
</div>

<form method="post" action="/WsRefComments/Add" class="form-control p-2 border rounded-2 border-1 d-flex flex-column gap-2">
    <input name="comment" class="form-control" placeholder="Comment..." />
    <input name="wsRefId" class="position-absolute invisible" value="@Model"/>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Ok</button>
        <a href="/WsRef" class="btn btn-info">Cancel</a>
    </div>

    @await Html.PartialAsync("ErrorsBlock")
</form>